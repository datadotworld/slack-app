{
    "name": "slack-app",
    "description": "data.world slack app",
    "repository": "https://github.com/datadotworld/slack-app",
    "scripts": {},
    "env": {
      "DW_AUTH_BASE_URL": {
        "required": true
      },      
      "DW_BASE_URL": {
        "required": true
      },      
      "DW_CLIENT_ID": {
        "required": true
      },      
      "DW_CLIENT_SECRET": {
        "required": true
      },      
      "DW_GET_TOKEN_BASE_URL": {
        "required": true
      },      
      "DW_REDIRECT_URI": {
        "required": true
      },
      "SLACK_APP_ID": {
        "required": true
      },
      "SLACK_CLIENT_ID": {
        "required": true
      },
      "SLACK_CLIENT_SECRET": {
        "required": true
      },
      "SLACK_BOT_TOKEN": {
        "required": false
      },
      "SLACK_TEAM_TOKEN": {
        "required": false
      },
      "SLACK_VERIFICATION_TOKEN": {
        "required": true
      },
      "SLASH_COMMAND": {
        "required": true
      }
    },
    "formation": {
      "web": {
        "quantity": 1
      }
    },
    "addons": [
      "heroku-postgresql"
    ],
    "buildpacks": [
      {
        "url": "heroku/nodejs"
      }
    ]
  }